{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@angular-eslint/template-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": [
            "off"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "array-bracket-spacing": [
            "warn",
            "always"
        ],
        "space-in-parens": [
            "warn",
            "always"
        ],
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "@typescript-eslint/no-explicit-any": [
            "off"
        ],
        "@typescript-eslint/no-empty-function": [
            "off"
        ],
        "@typescript-eslint/no-unused-vars": [
            "off"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "rules": {
                "indent": [
                    "warn",
                    4
                ],
                "linebreak-style": [
                    "off"
                ],
                "quotes": [
                    "warn",
                    "single"
                ],
                "semi": [
                    "warn",
                    "always"
                ],
                "array-bracket-spacing": [
                    "warn",
                    "always"
                ],
                "space-in-parens": [
                    "warn",
                    "always"
                ],
                "object-curly-spacing": [
                    "warn",
                    "always"
                ],
                "@typescript-eslint/no-explicit-any": [
                    "off"
                ],
                "@typescript-eslint/no-empty-function": [
                    "off"
                ],
                "@typescript-eslint/no-unused-vars": [
                    "off"
                ]
            }
        }
    ]
}